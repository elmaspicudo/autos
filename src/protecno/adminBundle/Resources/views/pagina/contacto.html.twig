 {% extends '::base_front.html.twig' %}
{% block banner %}
{% endblock %}
{% block contMenu %}
{% endblock %}
{% block contsnMenu %}
<div class="beta-map">
		
		<div class="abs-fullwidth beta-map wow flipInX"><iframe src="{{entity.mapa}}" ></iframe></div>
	</div>
	<div class="container">
		<div id="content" class="space-top-none">
			
			<div class="space50">&nbsp;</div>
			<div class="row">
				<div class="col-sm-8">
					<h2>Formulario de Contacto</h2>
					<div class="space20">&nbsp;</div>
					<p>{{entity.contenido|raw}}</p>
					<div class="space20">&nbsp;</div>
					<form action="" id="frmContact" method="post" class="contact-form">	
						<div class="form-block">
							<input name="name" type="text" id="name" placeholder="Nombre (required)">
						</div>
						<div class="form-block">
							<input name="email" type="email" id="email" placeholder="Email (required)">
						</div>
						<div class="form-block">
							<input name="subject" type="text" placeholder="Asunto">
						</div>
						<div class="form-block">
							<textarea name="message" placeholder="Mensaje"></textarea>
						</div>
						<div class="form-block">
							<button type="button" id="btnMensaje" class="beta-btn primary">Enviar Mensaje <i class="fa fa-chevron-right"></i></button>
						</div>
					</form>
				</div>
				<div class="col-sm-4">
					<h2>Informacion</h2>
					<div class="space20">&nbsp;</div>

					{{entity.informacion|raw}}
				</div>
			</div>
		</div> <!-- #content -->
	</div> <!-- .container -->

{% endblock %}
